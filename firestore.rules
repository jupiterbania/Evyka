
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // A user is the owner of a media document if their UID matches the authorId field.
    function isMediaOwner(mediaId) {
      return isOwner(get(/databases/$(database)/documents/media/$(mediaId)).data.authorId);
    }
    
    // Checks if the user trying to write to a "followers" subcollection
    // is the one being added as a follower.
    function isCreatingOwnFollowerEntry(followerId) {
      return request.auth.uid == followerId;
    }

    match /users/{userId} {
      // Anyone can read public user profiles.
      allow get: if true;
      
      // A user can create their own user document.
      allow create: if isOwner(userId);
      
      // This rule handles two scenarios for updating a user document:
      // 1. A user updates their own profile (username/image) OR their own following count.
      // 2. A signed-in user updates ANOTHER user's follower count (which happens during a follow action).
      allow update: if isSignedIn() && (
        // Scenario 1: Updating one's own document.
        (isOwner(userId) && (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['username', 'profileImageUrl']) ||
            request.resource.data.followingCount - resource.data.followingCount == 1 ||
            resource.data.followingCount - request.resource.data.followingCount == 1
         )) ||
        // Scenario 2: Another user is updating this document's follower count.
        (!isOwner(userId) && (
            (request.resource.data.followerCount - resource.data.followerCount == 1) ||
            (resource.data.followerCount - request.resource.data.followerCount == 1)
         ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followerCount']))
      );

      // No one can arbitrarily delete a user document. Deletions should be handled by a trusted server process.
      allow delete: if false;


      // Rules for followers and following subcollections
      match /followers/{followerId} {
        // Anyone can see who follows a user
        allow get, list: if true;
        
        // A user can add or remove themselves from another user's followers list.
        allow write: if isCreatingOwnFollowerEntry(followerId);
      }

      match /following/{followedUserId} {
        // Anyone can see who a user is following
        allow get, list: if true;
        // The user can modify their own following list (add/remove who they follow).
        allow write: if isOwner(userId);
      }
    }

    match /media/{mediaId} {
      // Anyone can view media.
      allow get, list: if true;
      // Any authenticated user can upload media. The authorId is set on the server.
      allow create: if isSignedIn();
      // Only the user who created the media can update or delete it.
      allow update, delete: if isMediaOwner(mediaId);
    }
     
    match /settings/main {
      // Anyone can read the public site settings.
      allow get: if true;
      allow write: if false; // Only allow admin/server to write
    }
  }
}
