rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isMediaOwner(mediaId) {
      return isSignedIn() && get(/databases/$(database)/documents/media/$(mediaId)).data.authorId == request.auth.uid;
    }

    match /users/{userId} {
      // Any signed-in user can read public user profiles.
      allow get: if isSignedIn();
      // Only the user themselves can create, update, or delete their own profile.
      allow create, update, delete: if isOwner(userId);
    }

    match /media/{mediaId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      // Only the user who created the media can update or delete it.
      allow update, delete: if isMediaOwner(mediaId);
    }
     
    match /settings/main {
      // Any signed-in user can read the site settings.
      allow get: if isSignedIn();
    }
  }
}
