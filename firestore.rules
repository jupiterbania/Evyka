rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // A user is the owner of a media document if their UID matches the authorId field.
    function isMediaOwner(mediaId) {
      return isOwner(get(/databases/$(database)/documents/media/$(mediaId)).data.authorId);
    }
    
    // Checks if the user trying to write to a "followers" subcollection
    // is the one being added as a follower.
    function isCreatingOwnFollowerEntry(followerId) {
      return request.auth.uid == followerId;
    }

    match /users/{userId} {
      // Anyone can read public user profiles.
      allow get: if true;
      
      // A user can create their own document.
      allow create: if isOwner(userId);
      
      // A user can update their own username and profile image.
      // Additionally, allow any signed-in user to update the followerCount and followingCount,
      // but only by incrementing or decrementing by 1.
      // This allows the server-side transaction to update counts for both users involved in a follow action.
      allow update: if (isOwner(userId) && request.resource.data.keys().hasOnly(['username', 'profileImageUrl'])) ||
                    (isOwner(userId) && request.resource.data.keys().hasOnly(['followingCount']) && 
                       (request.resource.data.followingCount == resource.data.followingCount + 1 || request.resource.data.followingCount == resource.data.followingCount - 1)) ||
                    (isSignedIn() && request.resource.data.keys().hasOnly(['followerCount']) &&
                       (request.resource.data.followerCount == resource.data.followerCount + 1 || request.resource.data.followerCount == resource.data.followerCount - 1));

      // No one can arbitrarily delete a user document. Deletions should be handled by a trusted server process.
      allow delete: if false;


      // Rules for followers and following subcollections
      match /followers/{followerId} {
        // Anyone can see who follows a user
        allow get, list: if true;
        
        // A user can add or remove themselves from another user's followers list.
        // This means the person initiating the follow is creating a document with their own ID.
        allow write: if isCreatingOwnFollowerEntry(followerId);
      }

      match /following/{followedUserId} {
        // Anyone can see who a user is following
        allow get, list: if true;
        // The user can modify their own following list (add/remove who they follow).
        allow write: if isOwner(userId);
      }
    }

    match /media/{mediaId} {
      // Anyone can view media.
      allow get, list: if true;
      // Any authenticated user can upload media. The authorId is set on the server.
      allow create: if isSignedIn();
      // Only the user who created the media can update or delete it.
      allow update, delete: if isMediaOwner(mediaId);
    }
     
    match /settings/main {
      // Anyone can read the public site settings.
      allow get: if true;
    }
  }
}
