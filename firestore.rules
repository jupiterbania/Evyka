rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isMediaOwner(mediaId) {
      return isSignedIn() && get(/databases/$(database)/documents/media/$(mediaId)).data.authorId == request.auth.uid;
    }

    match /users/{userId} {
      // Anyone can read public user profiles.
      allow get: if true;
      
      // The user can create, update, or delete their own document.
      // The backend flow can also update any user document (e.g., for follower counts).
      // Because this is a less restrictive rule, it's critical that
      // server-side logic (flows) is the only thing performing sensitive cross-user updates.
      allow create, update, delete: if isSignedIn();

      // Rules for followers and following subcollections
      match /followers/{followerId} {
        // Anyone can see who follows a user
        allow get, list: if true;
        // The follower can add/remove themselves from the list
        allow write: if isOwner(followerId);
      }

      match /following/{followedId} {
        // Anyone can see who a user is following
        allow get, list: if true;
        // The user can modify their own following list
        allow write: if isOwner(userId);
      }
    }

    match /media/{mediaId} {
      allow get, list: if true;
      // Allow signed-in users to create media. This also allows backend processes.
      allow create: if isSignedIn();
      // Only the user who created the media can update or delete it.
      allow update, delete: if isMediaOwner(mediaId);
    }
     
    match /settings/main {
      // Anyone can read the public site settings.
      allow get: if true;
    }
  }
}
