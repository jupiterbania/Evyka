
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isDesignatedAdmin() {
      return request.auth != null && request.auth.token.email == 'jupiterbania472@gmail.com';
    }

    match /users/{userId} {
      // Users can read and update their own profile.
      allow get, update: if isOwner(userId);
      // Users can create their own profile.
      allow create: if isOwner(userId);
      // No one can list users, only get them by ID.
      // Admins can delete users.
      allow delete: if isAdmin() || isDesignatedAdmin();

      match /messages/{messageId} {
        // Users can manage their own messages and replies.
        // Admins can manage all messages and replies.
        allow read, write: if isOwner(userId) || isAdmin() || isDesignatedAdmin();

        match /replies/{replyId} {
          allow read, write: if isOwner(userId) || isAdmin() || isDesignatedAdmin();
        }
      }
    }

    // This rule allows admins to perform collection group queries on 'messages'.
    match /{path=**}/messages/{messageId} {
      allow read: if isAdmin() || isDesignatedAdmin();
    }

    match /media/{mediaId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin() || isDesignatedAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isAdmin() || isDesignatedAdmin();
      allow create, delete: if isDesignatedAdmin(); // Only the designated admin can grant/revoke admin roles.
      allow list, update: if false;
    }

    match /settings/main {
      allow get: if true;
      allow create, update, delete: if isAdmin() || isDesignatedAdmin();
    }
  }
}