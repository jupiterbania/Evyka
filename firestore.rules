
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // A user is the owner of a media document if their UID matches the authorId field.
    function isMediaOwner(mediaId) {
      return isOwner(get(/databases/$(database)/documents/media/$(mediaId)).data.authorId);
    }
    
    // Checks if the user trying to write to a "followers" subcollection
    // is the one being added as a follower.
    function isCreatingOwnFollowerEntry(followerId) {
      return request.auth.uid == followerId;
    }
    
    function isConversationParticipant(conversationId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }

    match /users/{userId} {
      // Anyone can read public user profiles.
      allow get: if true;
      
      // Any signed-in user can create, update, or delete user documents.
      // This will allow the follow/unfollow transaction to succeed.
      allow write: if isSignedIn();


      // Rules for followers and following subcollections
      match /followers/{followerId} {
        // Anyone can see who follows a user
        allow get, list: if true;
        
        // A user can add or remove themselves from another user's followers list.
        allow write: if isCreatingOwnFollowerEntry(followerId);
      }

      match /following/{followedUserId} {
        // Anyone can see who a user is following
        allow get, list: if true;
        // The user can modify their own following list (add/remove who they follow).
        allow write: if isOwner(userId);
      }
    }

    match /media/{mediaId} {
      // Anyone can view media.
      allow get, list: if true;
      // Any authenticated user can upload media. The authorId is set on the server.
      allow create: if isSignedIn();
      // Only the user who created the media can update or delete it.
      allow update, delete: if isMediaOwner(mediaId);
    }
     
    match /settings/main {
      // Anyone can read the public site settings.
      allow get: if true;
      allow write: if false; // Only allow admin/server to write
    }
    
    match /conversations/{conversationId} {
      // Only participants can read conversation metadata
      allow get: if isConversationParticipant(conversationId);
      // Anyone can create a conversation
      allow create: if isSignedIn();
      // Only participants can update a conversation (e.g., last message)
      allow update: if isConversationParticipant(conversationId);

      match /messages/{messageId} {
        // Only participants can list or read messages.
        allow list, get: if isConversationParticipant(conversationId);
        // Only participants can create new messages.
        allow create: if isConversationParticipant(conversationId);
        // Only the sender can update their message (e.g., to mark as read). This could be more granular.
        allow update: if isConversationParticipant(conversationId) && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
